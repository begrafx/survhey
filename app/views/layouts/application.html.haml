!!! 5
%html
  %head

    %meta{charset: "utf-8"}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1"}

    %meta{name: "twitter:card", content: "summary"}
    %meta{name: "twitter:site", content: "@survhey"}
    %meta{name: "twitter:title", content: page_title}
    %meta{name: "twitter:description", content: content_for(:page_description) || t("app.description")}
    %meta{name: "twitter:image", content: image_url("logo-thumb.png")}

    %link{rel:"icon", type:"image/png", href:"/favicon-32x32.png?v:wAAOqwYb5x", sizes:"32x32"}
    %link{rel:"icon", type:"image/png", href:"/favicon-96x96.png?v:wAAOqwYb5x", sizes:"96x96"}
    %link{rel:"icon", type:"image/png", href:"/favicon-16x16.png?v:wAAOqwYb5x", sizes:"16x16"}

    = csrf_meta_tag

    %title= page_title

    = stylesheet_link_tag "//fonts.googleapis.com/css?family=Roboto:300,400,500"
    = stylesheet_link_tag :application

  %body{class: body_class}
    .page__container.container
      = render "shared/header"
      = yield

      = javascript_include_tag :application
